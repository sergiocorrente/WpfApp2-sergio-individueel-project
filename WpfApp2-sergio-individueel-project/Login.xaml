<Window x:Class="WpfApp2_sergio_individueel_project.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2_sergio_individueel_project"
        mc:Ignorable="d"
        Title="Login" Height="400" Width="400">
    <Grid Background="#31363d">
        <StackPanel  Margin="20">
            <Label Content="Login" Foreground="White" FontSize="25" HorizontalAlignment="Center"/>
            <Separator></Separator>
            <Label Content="Username" Foreground="White"/>
            <TextBox Name="txtUsername" TextDecorations="Underline" Text="Gebruiker naam" Background="#545d6a" Foreground="White" FontSize="18"  />
            <Label Content="Password" Foreground="White"/>
            <PasswordBox Password="Password" x:Name="txtPassword" Background="#545d6a" Foreground="White" FontSize="18" />
            <Button Name="btnSubmit" Content="Submit" Margin="60 10" Background="#545d6a" Foreground="White" FontSize="18" Click="btnSubmit_Click" />
            <Button Name="Clear" Content="Clear" Margin="60 10" Background="#545d6a" Foreground="white" FontSize="18" />
        </StackPanel>

    </Grid>
</Window>
